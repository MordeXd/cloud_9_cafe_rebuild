# =====================================================
# CLOUD 9 CAFE - ENVIRONMENT CONFIGURATION EXAMPLE
# Copy this file to .env and update with your values
# =====================================================

# Application Settings
APP_NAME="Cloud 9 Cafe"
APP_ENV=development
APP_URL=http://localhost/cloud_9_cafe_rebuild
APP_TIMEZONE=Asia/Kolkata

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=cloud_9_cafe
DB_USERNAME=root
DB_PASSWORD=your_password_here
DB_CHARSET=utf8mb4

# Session Configuration
SESSION_NAME=cloud9cafe_session
SESSION_LIFETIME=120

# Email Configuration (SMTP)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@cloud9cafe.com
MAIL_FROM_NAME="Cloud 9 Cafe"

# Admin Credentials (Default)
ADMIN_EMAIL=admin@cloud9cafe.com
ADMIN_PASSWORD=change_this_password

# Payment Gateway (Future Use)
PAYMENT_GATEWAY=cash
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# Security
HASH_COST=10
CSRF_TOKEN_NAME=csrf_token

# Upload Settings
MAX_UPLOAD_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif
UPLOAD_PATH=assets/uploads/

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_WISHLIST=true
ENABLE_REVIEWS=false
ENABLE_LOYALTY_POINTS=true
